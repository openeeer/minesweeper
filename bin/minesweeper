#!/usr/bin/env php
<?php
if (file_exists($autoload = __DIR__ . '/../vendor/autoload.php')) {
    require $autoload;
} elseif (file_exists($autoload = __DIR__ . '/../../../autoload.php')) {
    require $autoload;
} else {
    fwrite(STDERR, "Autoloader not found. Try running 'composer install'.");
    exit(1);
}



use Openeeer\Minesweeper\Game;

$game = new Game();
$game->run();
